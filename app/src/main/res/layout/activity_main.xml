<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="370dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/botonSalir"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/return_24"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"/>


    <LinearLayout
        android:id="@+id/customPlayer"
        android:layout_width="284dp"
        android:layout_height="177dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:src="@drawable/peon"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:rotationY="-180" />

            <EditText
                android:id="@+id/nameP1"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"

                android:layout_weight="1"
                android:gravity="center"
                android:hint="Name of Player 1"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <EditText
                android:id="@+id/nameP2"
                android:layout_width="153dp"
                android:layout_height="match_parent"

                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Name of Player 2"
                android:inputType="text" />

            <ImageView
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@drawable/torre" />

        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/MinutosVerif"
        android:layout_width="93dp"
        android:layout_height="192dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768">

        <RadioButton
            android:id="@+id/tresMinutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:text="    3 min"
            android:textColor="#F4693D" />

        <RadioButton
            android:id="@+id/cincoMinutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    5 min"
            android:textColor="#F4693D" />

        <RadioButton
            android:id="@+id/diezMinutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    10 min"
            android:textColor="#F4693D" />

        <RadioButton
            android:id="@+id/treintaMinutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    30 min"
            android:textColor="#F4693D" />

    </RadioGroup>

    <Button
        android:id="@+id/BotonStar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>